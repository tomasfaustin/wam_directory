<h1>Employee Directory</h1>

<ul>
    <% @jobs.each do |job| %>
        <li>
            <strong> <%= job.name %> </strong> - <%= job.position %>
        </li>
    <% end %>
</ul>

<%= form_tag(jobs_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Names or Jobs" %>
<%= submit_tag "Search" %>
<% end %>
